<body>
  <div class="overlay">
    <h1>BESTIEE B'DAY ‚ô•Ô∏èüíï</h1>
    <div id="countdown"></div>
    <button id="playButton" onclick="playMusic()">üéµ Play Music</button>
    <button id="shareButton" onclick="sharePage()">üì§ Share</button>
    <audio id="bgmusic" src="kaun_tujhe.mp3" loop></audio>
  </div>

  <script>
    const countdownDate = new Date('2025-06-21T00:00:00').getTime();

    const countdownFunction = setInterval(() => {
      const now = new Date().getTime();
      const distance = countdownDate - now;

      if (distance < 0) {
        clearInterval(countdownFunction);
        document.getElementById("countdown").innerHTML = 
          "<div class='celebrate'>üéâ Happy Birthday BESTIEE! üéâ</div>";
        return;
      }

      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      document.getElementById("countdown").innerHTML =
        `${days}d ${hours}h ${minutes}m ${seconds}s `;
    }, 1000);

    function playMusic() {
      const music = document.getElementById("bgmusic");
      music.play().catch(error => alert("Click again to enable music."));
    }

    function sharePage() {
      if (navigator.share) {
        navigator.share({
          title: "Bestie Countdown üéÇ",
          text: "Check out this sweet birthday countdown!",
          url: window.location.href
        }).catch(console.error);
      } else {
        alert("Sharing is not supported on this device.");
      }
    }
  </script>
